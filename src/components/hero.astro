---
import { Picture } from "astro:assets";
import heroImage from "assets/software_hero.png";
import resume from "assets/AadityaRKrishnan2025.pdf";
import Link from "@components/ui/link.astro";
import { Icon } from "astro-icon/components";
---

<main
 class="grid lg:grid-cols-2 place-items-center pt-16 pb-8 md:pt-12 md:pb-24">
 <div class="py-6 md:order-1 hidden md:block">
   <Picture
     src={heroImage}
     alt="Software Developer Illustration"
     widths={[200, 400, 600]}
     sizes="(max-width: 800px) 100vw, 620px"
     loading="eager"
     format="avif"
   />
 </div>
 <div>
   <h1
     class="text-5xl lg:text-6xl xl:text-7xl font-bold lg:tracking-tight xl:tracking-tighter">
     Full Stack Python Engineer
   </h1>
   <p class="text-lg mt-4 text-slate-600 max-w-xl text-justify">
   Results-driven Senior Engineer with 7+ years of experience specializing in enterprise software and data analytics solutions. Demonstrated expertise in building secure applications reducing manual operations by 60%. Proficient in developing data visualization dashboards and implementing business intelligence solutions
   </p>
   <div class="mt-6 flex flex-col sm:flex-row gap-3">
     <Link
       href={resume}
       download="AadityaRKrishnan_Resume.pdf"
       class="flex gap-1 items-center justify-center"
       rel="noopener">
       <Icon class="text-white w-5 h-5" name="bx:bxs-download" />
       Resume
     </Link>
     <Link
       size="lg"
       style="outline"
       rel="noopener"
       href="https://github.com/aadityarkrishnan"
       class="flex gap-1 items-center justify-center"
       target="_blank">
       <Icon class="text-black w-4 h-4" name="bx:bxl-github" />
       GitHub Profile
     </Link>
   </div>
 </div>
</main>