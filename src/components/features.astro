---
// @ts-ignore
import { Icon } from "astro-icon/components";

const achievements = [
 {
   title: "Star of the Quarter (Q4 2023)",
   description:
     "Recognized for exceptional contributions to cloud security, process automation, and innovation in system development at Envestnet.",
   icon: "bx:bxs-trophy",
 },
 {
   title: "WoW Award (Q3 2023)",
   description:
     "Awarded for implementing innovative solutions in cloud security and process automation, significantly improving system efficiency.",
   icon: "bx:bxs-star", 
 },
 {
   title: "Best Rookie Award (2021)",
   description:
     "Received from Trinfy AFE for introducing new features, deferring backlogged tasks, and streamlining processes during my time at Infosys.",
   icon: "bx:bxs-medal",
 }
];
---

<div class="mt-16 md:mt-0">
 <h2 class="text-4xl lg:text-5xl font-bold lg:tracking-tight">
   Professional Achievements
 </h2>
 <p class="text-lg mt-4 text-slate-600">
   Recognition received for contributions to technology and innovation throughout my career.
 </p>
</div>

<div class="grid sm:grid-cols-2 md:grid-cols-3 mt-16 gap-16">
 {
   achievements.map((item) => (
     <div class="flex gap-4 items-start">
       <div class="mt-1 bg-black rounded-full p-2 w-8 h-8 shrink-0">
         <Icon class="text-white" name={item.icon} />
       </div>
       <div>
         <h3 class="font-semibold text-lg">{item.title}</h3>{" "}
         <p class="text-slate-500 mt-2 leading-relaxed">{item.description}</p>
       </div>
     </div>
   ))
 }
</div>