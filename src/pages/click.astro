---
import Layout from "@layouts/Layout.astro";
import Container from "@components/container.astro";
import Sectionhead from "@components/sectionhead.astro";
import { Image } from "astro:assets";

// Import all images from the photos directory
const imageFiles = import.meta.glob('/src/assets/photos/*.{png,jpg,jpeg,gif}');
const images = Object.entries(imageFiles).map(([path]) => {
  const filename = path.split('/').pop()?.split('.')[0] || '';
  return {
    src: path,
    alt: filename.replace(/-/g, ' '),
    title: filename.replace(/-/g, ' ')
  };
});
---

<Layout title="Photography">
  <Container>
    <Sectionhead>
      <Fragment slot="title">My Clicks</Fragment>
      <Fragment slot="desc">Capturing moments through my lens</Fragment>
    </Sectionhead>

    <div class="mt-16">
      <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-8">
        {
          images.map((image) => (
            <div class="group relative aspect-[4/3] overflow-hidden rounded-xl bg-gray-100 hover:shadow-xl transition-all duration-300">
              <img
                src={image.src}
                alt={image.alt}
                class="h-full w-full object-cover object-center group-hover:scale-105 transition-transform duration-300"
                loading="lazy"
                decoding="async"
              />
              <div class="absolute inset-0 bg-gradient-to-t from-black/60 via-black/0 opacity-0 group-hover:opacity-100 transition-all duration-300">
                <div class="absolute bottom-0 left-0 right-0 p-4">
                  <h3 class="text-white text-lg font-medium capitalize">
                    {image.title}
                  </h3>
                </div>
              </div>
            </div>
          ))
        }
      </div>

      {images.length === 0 && (
        <div class="text-center py-20">
          <p class="text-gray-500">
            No photos found. Add some photos to the /src/assets/photos directory.
          </p>
        </div>
      )}
    </div>
  </Container>
</Layout>

<style>
  .grid {
    --min-item-width: 300px;
    --gap: 2rem;
  }
</style>