<Layout title="Resume">
  <div class="max-w-4xl mx-auto px-4 py-8">
    {
      experience.map((job, index) => (
        <div key={index} class="mb-8 bg-white rounded-xl shadow-md overflow-hidden hover:shadow-lg transition-shadow duration-300">
          {/* Header Section */}
          <div class="border-b border-gray-200">
            <div class="px-6 py-5">
              <div class="flex justify-between items-start">
                <div>
                  <h3 class="text-xl font-semibold text-gray-900">{job.title}</h3>
                  <p class="text-base text-gray-600 mt-1">{job.company}</p>
                  <div class="flex flex-wrap gap-2 mt-2 text-sm text-gray-500">
                    <span class="flex items-center gap-1">
                      <Icon name="bx:calendar" class="w-4 h-4" />
                      {job.period}
                    </span>
                    <span class="flex items-center gap-1">
                      <Icon name="bx:map" class="w-4 h-4" />
                      {job.location}
                    </span>
                    <span class="flex items-center gap-1">
                      <Icon name="bx:briefcase" class="w-4 h-4" />
                      {job.type}
                    </span>
                  </div>
                </div>
              </div>
            </div>
          </div>

          {/* Content Section */}
          <div class="px-6 py-5">
            {/* Skills Tags */}
            <div class="mb-4">
              <div class="flex flex-wrap gap-2">
                {job.skills.map((skill, skillIndex) => (
                  <span key={skillIndex} class="inline-flex items-center px-3 py-1 rounded-full text-sm font-medium bg-gray-100 text-gray-800">
                    {skill}
                  </span>
                ))}
              </div>
            </div>

            {/* Job Duties */}
            <div>
              <h4 class="text-sm font-semibold text-gray-900 uppercase tracking-wider mb-3">
                Responsibilities & Achievements
              </h4>
              <ul class="space-y-3">
                {job.duties.map((duty, dutyIndex) => (
                  <li key={dutyIndex} class="flex gap-3">
                    <span class="flex-shrink-0 w-5 h-5 text-gray-400">
                      <Icon name="bx:right-arrow-alt" class="w-5 h-5" />
                    </span>
                    <span class="text-gray-600">{duty}</span>
                  </li>
                ))}
              </ul>
            </div>
          </div>
        </div>
      ))
    }
  </div>
</Layout>
