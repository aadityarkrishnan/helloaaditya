---
import Layout from "@layouts/Layout.astro";
import Container from "@components/container.astro";
import Sectionhead from "@components/sectionhead.astro";

const contactMethods = [
  {
    title: "Email",
    description: "Send me an email at:",
    items: [
      {
        link: "mailto:aadityarkrishnan@gmail.com",
        text: "aadityarkrishnan@gmail.com",
        subtext: "Primary"
      },
      {
        link: "mailto:meetarkdeveloper@gmail.com",
        text: "meetarkdeveloper@gmail.com",
        subtext: "Secondary"
      }
    ],
    icon: `<svg xmlns="http://www.w3.org/2000/svg" class="w-6 h-6 text-blue-500" fill="none" viewBox="0 0 24 24" stroke="currentColor">
      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z" />
    </svg>`
  },
  {
    title: "Phone",
    description: "Call or WhatsApp me at:",
    items: [
      {
        link: "tel:+918848151464",
        text: "+91 8848 151 464",
        subtext: "Available during business hours"
      }
    ],
    icon: `<svg xmlns="http://www.w3.org/2000/svg" class="w-6 h-6 text-blue-500" fill="none" viewBox="0 0 24 24" stroke="currentColor">
      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z" />
    </svg>`
  },
  {
    title: "LinkedIn",
    description: "Connect with me on LinkedIn:",
    items: [
      {
        link: "https://www.linkedin.com/in/aaditya-r-krishnan-3200a92aa/",
        text: "Aaditya R Krishnan",
        subtext: "View my professional profile"
      }
    ],
    icon: `<svg xmlns="http://www.w3.org/2000/svg" class="w-6 h-6 text-blue-500" fill="currentColor" viewBox="0 0 24 24">
      <path d="M19 0h-14c-2.761 0-5 2.239-5 5v14c0 2.761 2.239 5 5 5h14c2.762 0 5-2.239 5-5v-14c0-2.761-2.238-5-5-5zm-11 19h-3v-11h3v11zm-1.5-12.268c-.966 0-1.75-.79-1.75-1.764s.784-1.764 1.75-1.764 1.75.79 1.75 1.764-.783 1.764-1.75 1.764zm13.5 12.268h-3v-5.604c0-3.368-4-3.113-4 0v5.604h-3v-11h3v1.765c1.396-2.586 7-2.777 7 2.476v6.759z"/>
    </svg>`
  }
];
---

<Layout title="Contact">
  <Container>
    <Sectionhead>
      <Fragment slot="title">Contact</Fragment>
      <Fragment slot="desc">Let's connect and discuss opportunities</Fragment>
    </Sectionhead>

    <div class="grid md:grid-cols-2 gap-10 mx-auto max-w-4xl mt-16">
      <div>
        <h2 class="font-medium text-2xl text-gray-800">Get in Touch</h2>
        <p class="text-lg leading-relaxed text-slate-500 mt-3">
          I'm always open to discussing new projects, creative ideas, or opportunities to be part of your visions.
        </p>
      </div>
    </div>

    <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-8 mx-auto max-w-4xl mt-8">
      {
        contactMethods.map((method) => (
          <div class="flex flex-col gap-4 bg-white rounded-lg p-6 shadow-sm hover:shadow-md transition-shadow">
            <div class="inline-block">
              <div class="bg-blue-50 p-3 rounded-lg w-fit" set:html={method.icon} />
            </div>
            <div>
              <h2 class="font-semibold text-lg text-gray-800">{method.title}</h2>
              <p class="text-slate-500 mt-1 text-sm">{method.description}</p>
              
              <div class="mt-3 space-y-2">
                {method.items.map((item) => (
                  <div>
                    <a
                      href={item.link}
                      target={item.link.startsWith('http') ? '_blank' : '_self'}
                      rel={item.link.startsWith('http') ? 'noopener noreferrer' : ''}
                      class="text-blue-600 hover:text-blue-800 font-medium block">
                      {item.text}
                    </a>
                    <span class="text-sm text-gray-500">{item.subtext}</span>
                  </div>
                ))}
              </div>
            </div>
          </div>
        ))
      }
    </div>

    <div class="mx-auto max-w-4xl mt-16 text-center">
      <p class="text-lg text-slate-500">
       Alappuzha, Kerala 
      </p>
    </div>
  </Container>
</Layout>